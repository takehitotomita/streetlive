<h1>会員情報</h1>
<h3>登録情報</h3>
<%= link_to "編集する", edit_public_user_path,class: "btn btn-primary" %>
<%= link_to "パスワードを変更する", edit_user_password_path,class: "btn btn-primary" %>
<table class="table">
		<tr>
			<th>氏名</th>
			<td><%= @user.last_name + @user.first_name %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @user.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @user.telephone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>所属バンド</th>
			<td><%= @user.bands %></td>
		</tr>
</table>


<%= link_to "退会する", public_users_unsubscribe_path,class: "btn btn-primary" %>
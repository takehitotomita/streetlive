<h2>登録情報編集</h2>
<div class="row">
    <%= form_with model: @user, url:public_user_path(current_user.id),local: true do |f| %>
      <div class="form-group">
        名前<%= f.label :（姓） %>
        <%= f.text_field :last_name %>
        <%= f.label :（名）%>
        <%= f.text_field :first_name %>
      </div>>

        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.telephone_field :telephone_number, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <%= f.submit '編集内容を保存する' %>
    <% end %>
  </div>
</div>
<div>
  <%= link_to '退会する', unsubscribe_public_users_path, class: "btn-flat-horizontal-border" %>
</div>
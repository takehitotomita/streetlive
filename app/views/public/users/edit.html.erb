<h1>登録情報編集</h1>
<%= form_with model: @user, url:public_user_path(current_user.id),local: true do |f| %>
 <label class="field">
    名前<%= f.label :（姓） %>
    <%= f.text_field :last_name %>
    <%= f.label :（名）%>
    <%= f.text_field :first_name %>

  <div class="郵便番号（ハイフンなし）">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.submit '編集内容を保存する' %>